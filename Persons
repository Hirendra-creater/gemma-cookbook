class PersonaManager:
    def __init__(self):
        self.personas = {
            "academic_tutor": {"tone": "formal", "style": "educational"},
            "creative_muse": {"tone": "playful", "style": "imaginative"},
            "business_strategist": {"tone": "direct", "style": "analytical"}
        }

    def get_persona(self, name: str):
        return self.personas.get(name, {})
